#%Module 1.0

set _module_name  [module-info name]
set is_module_rm  [module-info mode remove]
set sys        [uname sysname]
set os         [uname release]

set GIST_LEVEL python2.7
set version $GIST_LEVEL

set GIST_CURRPATH /mnt/misc/sw/x86_64/all/gist/$GIST_LEVEL

### you'd only need these for non-system-LLVM
prepend-path PATH            $GIST_CURRPATH/bin
prepend-path PYTHONPATH            $GIST_CURRPATH/site-packages

proc ModulesHelp { } {
  puts stderr " This module provides gist"
  puts stderr "-----------"
  puts stderr ""
}

module-whatis   "gist - python2.7 toolkit"
